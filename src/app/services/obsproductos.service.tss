  /*usamos behavior en vez de subject para poder mandar un 
  valor por defecto en el constructor ths.obsproductos */
  private productosSubject: BehaviorSubject<Productos[]>

  constructor() {
    this.productosSubject = new BehaviorSubject<Productos[]>(this.obsproductos)
  }

  //Obtener productos
  obtenerProductos(): Observable<Productos[]> {
    //le enviamos el observable que esta dentro del subject
    return this.productosSubject.asObservable()
  }

  obtenerProducto(id: number): Observable<Productos>{
    //usamos el metodo de arriba para luego filtrarlos por id
    return this.obtenerProductos().pipe(
    map((obsproductos: Productos[] ) => 
    obsproductos.filter((obsproductos: Productos) => obsproductos.id === id)[0]
    ))}

  agregarProducto(producto: Productos){
    this.obsproductos.push(producto);

    //Para actualizar la info
    this.productosSubject.next(this.obsproductos)
  }  

  editarProducto(producto: Productos){
    //obtener el id del producto a editar usando findIndex
    let indice = this.obsproductos.findIndex(
      (p: Productos) => p.id === producto.id)

    if (indice > -1) {
      this.obsproductos[indice] = producto
    }  
    //Para actualizar la info
    this.productosSubject.next(this.obsproductos)
  }

  eliminarProducto(id: number){
     //obtener el id del producto a eliminar usando findIndex
     let indice = this.obsproductos.findIndex(
      (p: Productos) => p.id === id)

    if (indice > -1) {
  //usamos slice para eliminar prod empezamos en indice y elimin 1
      this.obsproductos.slice(indice, 1)
    }  
    //Para actualizar la info de los productos
    this.productosSubject.next(this.obsproductos)
  }

}
